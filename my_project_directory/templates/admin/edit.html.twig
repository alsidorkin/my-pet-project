{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block content %}
<div class="row justify-content-center mt-5">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <h1>Edit User</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.email, 'Email address', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'id': 'email' } }) }}
                {{ form_errors(form.email) }}
            </div>
             <div class="mb-3">
                {{ form_label(form.password, 'Password', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.password, { 'attr': { 'class': 'form-control', 'id': 'password' } }) }}
                {{ form_errors(form.password) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.roles, 'Role', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.roles, { 'attr': { 'class': 'form-control', 'id': 'role' } }) }}
                {{ form_errors(form.roles) }}
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('app_admin_index') }}" class="btn btn-secondary">Back to list</a>
        </div>

        <div class="mt-3">
            {{ include('admin/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
