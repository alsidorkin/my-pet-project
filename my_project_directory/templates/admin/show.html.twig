{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">User</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th scope="row">Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th scope="row">Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th scope="row">Is Verified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_admin_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
        {{ include('admin/_delete_form.html.twig', { 'class': 'd-inline' }) }}
    </div>
</div>
{% endblock %}

