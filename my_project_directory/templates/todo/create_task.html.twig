{# templates/todo/create_task.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create New Task{% endblock %}

{% block content %}
    <h1>Create New Task</h1>

    <form action="{{ path('app_todo_create') }}" method="post">
        <div class="mb-3">
            <label for="content" class="form-label">Task Content</label>
            <input type="text" id="content" name="content" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="due" class="form-label">Due Date</label>
            <input type="date" id="due" name="due" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" rows="4"></textarea>
        </div>
        <div class="mb-3">
            <label for="priority" class="form-label">Priority</label>
            <select id="priority" name="priority" class="form-control">
                <option value="1">Low</option>
                <option value="2">Medium</option>ugrent
                <option value="3">High</option>
                <option value="4">Ugrent</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Create Task</button>
    </form>
{% endblock %}
